= render "users/shared/account_header"

.account-main
  .account-top
    %h3.account-top__title
      住所情報入力
    = form_for @address, html:{class: "registration-form"} do |f|
      = render "users/shared/error_messages", resource: @address
      .account-contents
        .account-input
          .account-input__title
          .account-input__form
            .field
              = f.label :postcode, "郵便番号"
              %span.form-require 必須
              %br
              = f.text_field :postcode, autofocus: true, autocomplete: "postal_code", placeholder: "例）123-4567", class:"input-default"
            .field
              = f.label "都道府県"
              %span.form-require 必須
              %br
              = f.select :prefecture, Address.prefectures.keys, {}, class:"input-default"
            .field
              = f.label :city, "市区町村"
              %span.form-require 必須
              %br
              = f.text_field :city, autocomplete: "municipality", placeholder: "例）中央区銀座", class:"input-default"
            .field
              = f.label :block, "番地"
              %span.form-require 必須
              %br
              = f.text_field :block, autocomplete: "number", placeholder: "例）1-10-10", class:"input-default"
            .field
              = f.label :building,"建物名"
              %span.form-require-not 任意
              %br
              = f.text_field :building, autocomplete: "building", placeholder: "例）GINZAビル201", class:"input-default"
            .field
              = f.label :phone_number, "電話"
              %span.form-require-not 任意
              %br
              = f.text_field :phone_number, autocomplete: "telephone_number", placeholder: "例）080-1234-5678", class:"input-default"

            %p.account-text
              「登録する」のボタンを押すことにより、
              %br
              = link_to "利用規約", "#" , target:"_blank"
              に同意したものとみなします
            .account-submit
              = f.submit "登録する", class: "submit-form"

=render "users/shared/account_footer"

                    %i.fas.fa-star
                      0
                %p (税込)
        .product-list
          %a 
            %figure.product-list--img
              =image_tag("/products/3.png")
            .product-list--body
              %h3.name 3
              .details
                %ul
                  %li 3000円
                  %li
                    %i.fas.fa-star
                      0
                %p (税込)
        .product-list
          %a 
            %figure.product-list--img
              =image_tag("/products/5.png")
            .product-list--body
              %h3.name 5
              .details
                %ul

.header
  .header-contents
    .main-header
      %h1.logo
        =link_to image_tag("/logo/logo.png"),"/"
      .search-box
        %form
          %input.search-box--input{id: "search-input", name: "key", placeholder: "キーワードから探す"}
            %button{type: "submit"}
              .search-box__icon
                =link_to image_tag("/icon/icon-search 1.png"),"#"

    .nav
      %ul.left-box
        %li.left-box__left
          =link_to "カテゴリー" 
        %li.left-box__right
          =link_to "ブランド"
      %ul.right-box
        %li.right-box__left
          =link_to "ログイン"
        %li.right-box__right
          =link_to "新規会員登録"
